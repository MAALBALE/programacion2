import java.awt.Color;
import java.awt.Font;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.SwingConstants;

public class Loro extends JFrame{
    public Loro(){
    this.setSize(500,500);
    setDefaultCloseOperation(EXIT_ON_CLOSE);
    setTitle("Segundo Parcial");
    setLocationRelativeTo(null);
    
    
    componentes();
        
}
    
 private void componentes(){
    JPanel panel = new JPanel();
    panel.setLayout(null);
    
    this.getContentPane().add(panel);
   
    
    JLabel etiqueta0 = new JLabel("Mantenimiento de Productos", SwingConstants.CENTER);
    etiqueta0.setBounds(80,20,300,30);
    etiqueta0.setForeground(Color.lightGray);
    etiqueta0.setOpaque(true);
    etiqueta0.setBackground(Color.BLACK);
    etiqueta0.setFont(new Font("arial", 3,18));
    panel.add(etiqueta0);
    
    JLabel etiqueta = new JLabel("IdProducto", SwingConstants.CENTER);
    etiqueta.setBounds(10,90,150,30);
    //etiqueta.setForeground(Color.WHITE);
    etiqueta.setOpaque(true);
    //etiqueta.setBackground(Color.DARK_GRAY);
    etiqueta.setFont(new Font("arial", 1,20));
    panel.add(etiqueta);
    
    
    JLabel etiquetaA = new JLabel("");
    etiquetaA.setBounds(50,90,390,30);
    etiquetaA.setOpaque(true);
    etiquetaA.setBackground(Color.lightGray);
    panel.add(etiquetaA);
    
    
    JLabel etiqueta1 = new JLabel("Nombre", SwingConstants.CENTER);
    etiqueta1.setBounds(10,160,150,30);
    etiqueta1.setForeground(Color.BLACK);
    etiqueta1.setOpaque(true);
    //etiqueta1.setBackground(Color.lightGray);
    etiqueta1.setFont(new Font("arial", 3,20));
    panel.add(etiqueta1);
    
    
    JLabel etiqueta01 = new JLabel("");
    etiqueta01.setBounds(50,160,390,30);
    etiqueta01.setOpaque(true);
    etiqueta01.setBackground(Color.lightGray);
    panel.add(etiqueta01);
    
    
    JLabel etiqueta2 = new JLabel("Precio", SwingConstants.CENTER);
    etiqueta2.setBounds(10,240,150,30);
    //etiqueta2.setForeground(Color.GREEN);
    etiqueta2.setOpaque(true);
    //etiqueta2.setBackground(Color.DARK_GRAY);
    etiqueta2.setFont(new Font("arial", 3,20));
    panel.add(etiqueta2);
    
    
    JLabel etiqueta02 = new JLabel("");
    etiqueta02.setBounds(50,240,390,30);
    etiqueta02.setOpaque(true);
    etiqueta02.setBackground(Color.lightGray);
    panel.add(etiqueta02);
    
    
    JButton boton = new JButton("Guardar");
     boton.setBounds(80,330,150,80);
     panel.add(boton);
     boton.setBackground(Color.RED);
     boton.setFont(new Font("arial", 1,25));
     
     
     JButton boton1 = new JButton("Editar");
     boton1.setBounds(290,330,150,80);
