    private void btnDecActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        
        int n = Integer.parseInt(txtN.getText());
        int [][] matriz = new int [16][16];
        matriz = this.matrizD(n);
        this.mostrarMatriz(matriz, n);
    }                                      

    private void btnHexaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
